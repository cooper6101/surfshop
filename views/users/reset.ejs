<% layout('layouts/boilerplate') -%>

<div class="container-fluid landingPage">
    <div class="container">
        <form class="text-center border border-light p-3 logForm" action="/reset/<%= token %>?_method=PUT" method="POST">
            <h1 class="mb-2">Reset Password</h1>
            <div>
                <label for="password">New Password</label>
                <input class="form-control mb-4" type="password" name="password" id="password" placeholder="New Password" autofocus>
            </div>
            <div>
                <label for="confirm">Confirm Password</label>
                <input class="form-control mb-4" type="password" name="confirm" id="confirm" placeholder="Confirm Password">
            </div>
            <div>
                <input class="form-control mb-4" type="submit" value="Update Password">
            </div>
        </form>
    </div>
</div>