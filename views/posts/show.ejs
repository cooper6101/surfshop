<h1><%= post.title %></h1>
<p><%= post.price %></p>
<p><%= post.description %></p>
<p><%= post.location %></p>
<div>
    <a href="/posts/<%= post.id %>/edit">
        <button>Edit</button>
    </a>
</div>
<div>
    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
</div>