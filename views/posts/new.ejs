<% layout('layouts/boilerplate') -%>

<div class="container-fluid landingPage">
        <div class="container">
            <form class="text-center border border-light p-5 logForm" action="/posts" method="POST" enctype="multipart/form-data">
    
                    <p class="h4 mb-4">New Post</p>
                
                    <!-- Title -->
                    <input class="form-control mb-4" type="text" name="post[title]" placeholder="Title">
                
                    <!-- Price -->
                    <input class="form-control mb-4" type="number" name="post[price]" step=".01" placeholder="Price">
                
                    <!-- Location -->
                    <input class="form-control mb-4" type="text" name="post[location]" placeholder="Location">

                    <!-- Description -->
                    <textarea class="form-control mb-4" name="post[description]" placeholder="Description"></textarea>

                    <!-- Images -->
                    <div class="d-flex justify-content-around">
                        <label for="images">Images:</label>
                    </div>
                    <div class="d-flex justify-content-around pl-5">    
                        <input type="file" accept="images/*" name="images" multiple>
                    </div>

                    <!-- Submit -->
                    <button class="btn btn-info btn-block my-4" type="submit">Submit</button>
                
                </form>
        </div>
    </div>