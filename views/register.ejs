<% layout('layouts/boilerplate') -%>

<div class="container-fluid landingPage">
        <div class="container">
            <form class="text-center border border-light p-5 logForm" action="/register" method="POST" enctype="multipart/form-data">
    
                    <p class="h4 mb-4">Register</p>
                
                    <!-- Username -->
                    <input class="form-control mb-4" type="text" id="username" name="username" placeholder="username" value='<%= username %>' required>
                
                    <!-- Password -->
                    <input class="form-control mb-4" type="password" id="password" name="password" placeholder="password" required>
                
                    <!-- Email -->
                    <input class="form-control mb-4" type="text" id="email" name="email" placeholder="email" value='<%= email %>' required>

                    <!-- Profile Image -->
                    <div class="d-flex justify-content-around">
                        <label for="image">Profile Image:</label>
                    </div>
                    <div class="d-flex justify-content-around pl-5">    
                        <input type="file" id="image" name="image">
                    </div>

                    <!-- Sign in button -->
                    <button class="btn btn-info btn-block my-4" type="submit">Register</button>
                
                </form>
        </div>
    </div>