<% layout('layouts/boilerplate') -%>

<div class="container-fluid landingPage">
    <div class="container">
        <form class="text-center border border-light p-5 logForm" action="/login" method="POST">

                <p class="h4 mb-4">Sign in</p>
            
                <!-- Email -->
                <input class="form-control mb-4" type="text" id="username" name="username" placeholder="username" required>
            
                <!-- Password -->
                <input class="form-control mb-4" type="password" id="password" name="password" placeholder="password" required>
            
                <div class="d-flex justify-content-around">
                    <div>
                        <!-- Forgot password -->
                        <a href="/forgot-password">Forgot password?</a>
                    </div>
                </div>
            
                <!-- Sign in button -->
                <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>
            
                <!-- Register -->
                <p>Not a member?
                    <a href="/register">Register</a>
                </p>
            
            </form>
    </div>
</div>